@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using UaeEInvoice.Components.Layout

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">

                <NotAuthorized Context="authState">
                    @if (authState.User?.Identity?.IsAuthenticated == true)
                    {
                        <global::UaeEInvoice.Components.Pages.Auth.RedirectToAccessDenied />
                    }
                    else
                    {
                        <global::UaeEInvoice.Components.Pages.Auth.RedirectToLogin />
                    }
                </NotAuthorized>

                <Authorizing>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <div class="container-xxl py-5">
                            <div class="alert alert-info rounded-4 shadow-sm border-0">
                                <b>Checking permission...</b>
                                <div class="text-muted">Please wait</div>
                            </div>
                        </div>
                    </LayoutView>
                </Authorizing>

            </AuthorizeRouteView>
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container-xxl py-5">
                    <div class="alert alert-secondary rounded-4 shadow-sm border-0">
                        <b>Page not found.</b>
                        <div class="text-muted">The page you requested doesn’t exist.</div>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
