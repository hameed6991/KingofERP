@page "/vat-sales-report"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using UaeEInvoice.Services.Reports
@using UaeEInvoice.Services.Auth
@inject VatReportService Vat
@inject ICurrentCompany CurrentCompany
@inject NavigationManager Nav

<style>
    :root {
        --bd: rgba(255,255,255,.12);
        --tx: rgba(255,255,255,.92);
        --mut: rgba(255,255,255,.62);
        --sh: 0 18px 70px rgba(0,0,0,.45);
    }

    .wrap {
        background: radial-gradient(1100px 650px at 12% -10%, rgba(34,197,94,.20), transparent 60%), radial-gradient(900px 520px at 90% 0%, rgba(59,130,246,.18), transparent 60%), linear-gradient(180deg, #0b1220, #070b16 70%, #040711);
        min-height: calc(100vh - 70px);
        border-radius: 22px;
        padding: 18px;
        color: var(--tx);
    }

    .hero {
        border-radius: 22px;
        padding: 16px;
        border: 1px solid var(--bd);
        box-shadow: var(--sh);
        background: linear-gradient(180deg, rgba(255,255,255,.10), rgba(255,255,255,.03));
        backdrop-filter: blur(10px);
    }

    .cardx {
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.06);
        box-shadow: 0 14px 35px rgba(0,0,0,.22);
        overflow: hidden;
    }

    .head {
        padding: 12px 14px;
        border-bottom: 1px solid rgba(255,255,255,.08);
        font-weight: 900;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .body {
        padding: 14px;
    }

    .mut {
        color: var(--mut);
    }

    .inp {
        border-radius: 12px !important;
        background: rgba(255,255,255,.92) !important;
        border: 1px solid rgba(15,23,42,.12) !important;
    }

    .tile {
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(255,255,255,.08);
        padding: 14px;
    }

        .tile .lbl {
            color: var(--mut);
            font-size: .85rem;
        }

        .tile .val {
            font-size: 1.8rem;
            font-weight: 900;
        }

    .tbl {
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        color: #0f172a;
        border: 1px solid rgba(15,23,42,.10);
    }

        .tbl thead th {
            background: #f1f5f9 !important;
            font-size: .80rem;
            text-transform: uppercase;
            letter-spacing: .3px;
            white-space: nowrap;
        }

    .btn {
        border-radius: 12px;
        font-weight: 900;
    }
</style>

<div class="container-xxl py-4">
    <div class="wrap">

        <div class="hero mb-3">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <div>
                    <h2 style="font-weight:900;" class="mb-1">VAT Sales Report (Output VAT)</h2>
                    <div class="mut">CompanyId: <b>@_companyId</b></div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light" @onclick="Load" disabled="@_loading">@(_loading ? "Loading..." : "Refresh")</button>
                </div>
            </div>

            <div class="row g-2 align-items-end mt-3">
                <div class="col-12 col-md-3">
                    <label class="form-label mut">From</label>
                    <input type="date" class="form-control inp" @bind="_from" />
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label mut">To</label>
                    <input type="date" class="form-control inp" @bind="_to" />
                </div>
                <div class="col-12 col-md-4">
                    <label class="form-label mut">Search (Invoice / Customer / TRN)</label>
                    <input class="form-control inp" @bind="_search" @bind:event="oninput" placeholder="INV-0001 / Name / TRN..." />
                </div>
                <div class="col-12 col-md-2 d-grid">
                    <button class="btn btn-primary" @onclick="Load" disabled="@_loading">Apply</button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_err))
        {
            <div class="alert alert-danger py-2">@_err</div>
        }

        @if (_vm == null)
        {
            <div class="cardx"><div class="body text-center mut py-5">No data.</div></div>
        }
        else
        {
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Taxable</div>
                        <div class="val">@_vm.Taxable.ToString("0.00")</div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Output VAT</div>
                        <div class="val">@_vm.Vat.ToString("0.00")</div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Gross</div>
                        <div class="val">@_vm.Gross.ToString("0.00")</div>
                    </div>
                </div>
            </div>

            <div class="cardx mb-3">
                <div class="head">
                    <div>Rate Breakup</div>
                    <div class="mut small">Grouped by VAT rate</div>
                </div>
                <div class="body">
                    <div class="tbl">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width:120px;">Rate</th>
                                    <th class="text-end">Taxable</th>
                                    <th class="text-end">VAT</th>
                                    <th class="text-end">Gross</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_vm.ByRate.Count == 0)
                                {
                                    <tr><td colspan="4" class="text-center text-muted py-4">No data</td></tr>
                                }
                                else
                                {
                                    @foreach (var r in _vm.ByRate)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@($"{r.VatRate * 100m:0.##}%")</td>
                                            <td class="text-end">@r.Taxable.ToString("0.00")</td>
                                            <td class="text-end">@r.Vat.ToString("0.00")</td>
                                            <td class="text-end fw-semibold">@r.Gross.ToString("0.00")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="cardx">
                <div class="head">
                    <div>Invoices</div>
                    <div class="mut small">Rows: <b>@FilteredDocs().Count()</b></div>
                </div>
                <div class="body">
                    <div class="tbl">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width:120px;">Date</th>
                                    <th style="width:170px;">Invoice</th>
                                    <th>Customer</th>
                                    <th style="width:160px;">TRN</th>
                                    <th class="text-end" style="width:140px;">Taxable</th>
                                    <th class="text-end" style="width:120px;">VAT</th>
                                    <th class="text-end" style="width:140px;">Gross</th>
                                    <th style="width:110px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in FilteredDocs())
                                {
                                    <tr>
                                        <td>@d.DocDate.ToString("dd-MMM-yyyy")</td>
                                        <td class="fw-semibold">@d.DocNo</td>
                                        <td>@d.PartyName</td>
                                        <td>@(string.IsNullOrWhiteSpace(d.PartyTRN) ? "—" : d.PartyTRN)</td>
                                        <td class="text-end">@d.Taxable.ToString("0.00")</td>
                                        <td class="text-end">@d.Vat.ToString("0.00")</td>
                                        <td class="text-end fw-semibold">@d.Gross.ToString("0.00")</td>
                                        <td>
                                            <!-- ✅ Safe: no Razor quote issue -->
                                            <a class="btn btn-sm btn-primary" href="@($"/invoice-view/{d.DocId}")">Open</a>
                                        </td>
                                    </tr>
                                }

                                @if (!FilteredDocs().Any())
                                {
                                    <tr><td colspan="8" class="text-center text-muted py-4">No invoices found</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    int _companyId;
    bool _loading;
    string? _err;

    DateTime _from = new(DateTime.Today.Year, DateTime.Today.Month, 1);
    DateTime _to = DateTime.Today;
    string _search = "";

    VatReportService.VatSideSummaryDto? _vm;

    protected override async Task OnInitializedAsync()
    {
        await CurrentCompany.RefreshAsync();
        _companyId = CurrentCompany.CompanyId;
        await Load();
    }

    async Task Load()
    {
        _err = null;
        _loading = true;

        try
        {
            await CurrentCompany.RefreshAsync();
            _companyId = CurrentCompany.CompanyId;
            if (_companyId <= 0) throw new Exception("Company not resolved.");

            _vm = await Vat.GetSalesAsync(_companyId, _from, _to);
        }
        catch (Exception ex)
        {
            _vm = null;
            _err = ex.InnerException?.Message ?? ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    IEnumerable<VatReportService.VatDocRowDto> FilteredDocs()
    {
        if (_vm == null) return Enumerable.Empty<VatReportService.VatDocRowDto>();

        var q = _vm.Docs.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(_search))
        {
            var s = _search.Trim();
            q = q.Where(x =>
                (x.DocNo ?? "").Contains(s, StringComparison.OrdinalIgnoreCase) ||
                (x.PartyName ?? "").Contains(s, StringComparison.OrdinalIgnoreCase) ||
                (x.PartyTRN ?? "").Contains(s, StringComparison.OrdinalIgnoreCase)
            );
        }

        return q;
    }
}
