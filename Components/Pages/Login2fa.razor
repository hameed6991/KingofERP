@page "/login-2fa"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@layout EmptyLayout

@inject NavigationManager Nav

<PageTitle>Verify OTP</PageTitle>

<style>
    .xwrap {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 22px;
        background: radial-gradient(900px 450px at 20% 10%, rgba(13,110,253,.12), transparent 60%), radial-gradient(900px 450px at 85% 15%, rgba(111,66,193,.12), transparent 60%), linear-gradient(180deg, rgba(248,249,250,1), rgba(255,255,255,1));
    }

    .xcard {
        width: 100%;
        max-width: 520px;
        border-radius: 22px;
        border: 1px solid rgba(0,0,0,.08);
        background: rgba(255,255,255,.92);
        box-shadow: 0 18px 60px rgba(0,0,0,.10);
        overflow: hidden;
    }

    .xhead {
        padding: 18px 20px;
        background: linear-gradient(135deg, rgba(13,110,253,.18), rgba(111,66,193,.12));
        border-bottom: 1px solid rgba(0,0,0,.06);
    }

    .xtitle {
        margin: 0;
        font-weight: 900;
        letter-spacing: -.4px;
    }

    .xsub {
        color: rgba(33,37,41,.70);
        font-size: 13px;
        margin-top: 6px;
    }

    .xbody {
        padding: 20px;
    }

    .btnx {
        border-radius: 14px;
        padding: 10px 14px;
        font-weight: 900;
    }
</style>

<div class="xwrap">
    <div class="xcard">
        <div class="xhead">
            <h3 class="xtitle">Verify OTP</h3>
            <div class="xsub">Open Google Authenticator and enter the 6-digit code.</div>
        </div>

        <div class="xbody">
            @if (error == "1")
            {
                <div class="alert alert-danger border-0 rounded-4 shadow-sm">
                    Invalid code. Try again.
                </div>
            }

            <form method="post" action="/auth/2fa">
                <input type="hidden" name="ReturnUrl" value="@FinalReturnUrl" />
                <input type="hidden" name="RememberMe" value="@(RememberMe == "1" ? "true" : "false")" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Authenticator code</label>
                    <input class="form-control form-control-lg"
                           name="Code"
                           autocomplete="one-time-code"
                           placeholder="123 456" />
                </div>

                <button type="submit" class="btn btn-primary btnx w-100">Verify & Continue</button>

                <div class="text-muted small mt-3">
                    Note: For security, OTP is required every login.
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "ReturnUrl")]
    public string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery]
    public string? RememberMe { get; set; } = "0";

    [SupplyParameterFromQuery]
    public string? error { get; set; }

    private string FinalReturnUrl => string.IsNullOrWhiteSpace(ReturnUrl) ? "/" : ReturnUrl!;
}
