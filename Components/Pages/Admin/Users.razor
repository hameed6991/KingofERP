@page "/admin/users"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using UaeEInvoice.Data
@attribute [Authorize(Roles = "Admin")]

@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Nav

<div class="container-xxl py-4 admin-surface">
    <div class="admin-hero mb-4">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <div class="admin-kicker">Admin</div>
                <h2 class="mb-1 fw-bold">Users</h2>
                <div class="text-muted">Manage users across companies</div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary" @onclick="Reload">
                    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                </button>

                <button class="btn btn-primary" @onclick="GoCreate">
                    <i class="bi bi-person-plus me-1"></i> Create User
                </button>
            </div>
        </div>

        <div class="row g-2 mt-3">
            <div class="col-12 col-md-6 col-lg-5">
                <input class="form-control form-control-lg"
                       placeholder="Search by email / phone..."
                       @bind="search" @bind:event="oninput" />
            </div>

            <div class="col-12 col-md-6 col-lg-7 d-flex align-items-center justify-content-md-end">
                <div class="small text-muted">
                    Showing <b>@FilteredUsers.Count()</b> / <b>@users.Count</b>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm admin-card">
        <div class="card-body p-0">
            @if (loading)
            {
                <div class="p-4 text-muted">Loading users...</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Company</th>
                                <th>Roles</th>
                                <th>Email Confirmed</th>
                                <th class="text-end" style="width:140px;">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var u in FilteredUsers)
                            {
                                <tr>
                                    <td class="fw-semibold">@u.Email</td>
                                    <td>@(string.IsNullOrWhiteSpace(u.PhoneNumber) ? "-" : u.PhoneNumber)</td>
                                    <td>@u.CompanyId</td>
                                    <td>
                                        <span class="badge bg-dark-subtle text-dark border">
                                            @GetRolesText(u.Id)
                                        </span>
                                    </td>
                                    <td>
                                        @if (u.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => GoCreate()">
                                            Create
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!FilteredUsers.Any())
                {
                    <div class="p-4 text-muted">No users found.</div>
                }
            }
        </div>
    </div>
</div>

<style>
    .admin-surface {
    }

    .admin-hero {
        border-radius: 18px;
        padding: 18px 18px 14px;
        background: linear-gradient(135deg, rgba(13,110,253,.08), rgba(25,135,84,.06));
        border: 1px solid rgba(0,0,0,.06);
    }

    .admin-kicker {
        display: inline-block;
        font-size: .75rem;
        letter-spacing: .12em;
        text-transform: uppercase;
        color: rgba(0,0,0,.55);
        margin-bottom: 6px;
    }

    .admin-card {
        border-radius: 18px;
        overflow: hidden;
    }
</style>

@code {
    private bool loading = true;
    private string search = "";
    private List<ApplicationUser> users = new();
    private Dictionary<string, string> rolesTextByUserId = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        loading = true;
        rolesTextByUserId.Clear();

        // ✅ EF Core async to avoid CS1998 warning
        users = await UserManager.Users
            .OrderByDescending(x => x.Email)
            .Take(500)
            .ToListAsync();

        // Roles (simple)
        foreach (var u in users)
        {
            var roles = await UserManager.GetRolesAsync(u);
            rolesTextByUserId[u.Id] = roles.Count == 0 ? "-" : string.Join(", ", roles);
        }

        loading = false;
    }

    private IEnumerable<ApplicationUser> FilteredUsers =>
        string.IsNullOrWhiteSpace(search)
            ? users
            : users.Where(u =>
                ((u.Email ?? "").Contains(search, StringComparison.OrdinalIgnoreCase)) ||
                ((u.PhoneNumber ?? "").Contains(search, StringComparison.OrdinalIgnoreCase)));

    private string GetRolesText(string userId)
        => rolesTextByUserId.TryGetValue(userId, out var txt) ? txt : "-";

    private void GoCreate()
        => Nav.NavigateTo("/admin/users/create");

    private async Task Reload()
        => await LoadUsersAsync();
}
