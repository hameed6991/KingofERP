@page "/vat-reconciliation"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

@using UaeEInvoice.Services.Reports
@using UaeEInvoice.Services.Auth
@inject VatReconciliationService Recon
@inject ICurrentCompany CurrentCompany

<style>
    :root {
        --bd: rgba(255,255,255,.12);
        --tx: rgba(255,255,255,.92);
        --mut: rgba(255,255,255,.62);
        --sh: 0 18px 70px rgba(0,0,0,.45);
    }

    .wrap {
        background: radial-gradient(1100px 650px at 12% -10%, rgba(34,197,94,.20), transparent 60%), radial-gradient(900px 520px at 90% 0%, rgba(59,130,246,.18), transparent 60%), linear-gradient(180deg, #0b1220, #070b16 70%, #040711);
        min-height: calc(100vh - 70px);
        border-radius: 22px;
        padding: 18px;
        color: var(--tx);
    }

    .hero {
        border-radius: 22px;
        padding: 16px;
        border: 1px solid var(--bd);
        box-shadow: var(--sh);
        background: linear-gradient(180deg, rgba(255,255,255,.10), rgba(255,255,255,.03));
        backdrop-filter: blur(10px);
    }

    .cardx {
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,.10);
        background: rgba(255,255,255,.06);
        box-shadow: 0 14px 35px rgba(0,0,0,.22);
        overflow: hidden;
    }

    .head {
        padding: 12px 14px;
        border-bottom: 1px solid rgba(255,255,255,.08);
        font-weight: 900;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .body {
        padding: 14px;
    }

    .mut {
        color: var(--mut);
    }

    .inp {
        border-radius: 12px !important;
        background: rgba(255,255,255,.92) !important;
        border: 1px solid rgba(15,23,42,.12) !important;
    }

    .tile {
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(255,255,255,.08);
        padding: 14px;
    }

        .tile .lbl {
            color: var(--mut);
            font-size: .85rem;
        }

        .tile .val {
            font-size: 1.6rem;
            font-weight: 900;
        }

    .tbl {
        border-radius: 14px;
        overflow: hidden;
        background: #fff;
        color: #0f172a;
        border: 1px solid rgba(15,23,42,.10);
    }

        .tbl thead th {
            background: #f1f5f9 !important;
            font-size: .80rem;
            text-transform: uppercase;
            letter-spacing: .3px;
            white-space: nowrap;
        }

    .btn {
        border-radius: 12px;
        font-weight: 900;
    }
</style>

<div class="container-xxl py-4">
    <div class="wrap">

        <div class="hero mb-3">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <div>
                    <h2 class="mb-1" style="font-weight:900;">VAT Reconciliation</h2>
                    <div class="mut">Compare VAT as per <b>Documents</b> vs <b>Ledger VAT Accounts</b></div>
                    <div class="mut">CompanyId: <b>@_companyId</b></div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-light" @onclick="Load" disabled="@_loading">@(_loading ? "Loading..." : "Refresh")</button>
                </div>
            </div>

            <div class="row g-2 align-items-end mt-3">
                <div class="col-12 col-md-3">
                    <label class="form-label mut">From</label>
                    <input type="date" class="form-control inp" @bind="_from" />
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label mut">To</label>
                    <input type="date" class="form-control inp" @bind="_to" />
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label mut">Output VAT A/c No</label>
                    <input class="form-control inp" type="number" @bind="_outputVatAcc" />
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label mut">Input VAT A/c No</label>
                    <input class="form-control inp" type="number" @bind="_inputVatAcc" />
                </div>

                <div class="col-12 col-md-2 d-grid mt-2">
                    <button class="btn btn-primary" @onclick="Load" disabled="@_loading">Apply</button>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_err))
        {
            <div class="alert alert-danger py-2">@_err</div>
        }

        @if (_vm == null)
        {
            <div class="cardx"><div class="body text-center mut py-5">No data.</div></div>
        }
        else
        {
            <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Output VAT (Docs) vs Ledger</div>
                        <div class="val">@_vm.SalesOutputVat_Docs.ToString("0.00")  /  @_vm.OutputVat_Ledger.ToString("0.00")</div>
                        <div class="mut small">Diff: <b>@_vm.OutputVat_Diff.ToString("0.00")</b></div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Input VAT (Docs) vs Ledger</div>
                        <div class="val">@_vm.PurchaseInputVat_Docs.ToString("0.00")  /  @_vm.InputVat_Ledger.ToString("0.00")</div>
                        <div class="mut small">Diff: <b>@_vm.InputVat_Diff.ToString("0.00")</b></div>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="tile">
                        <div class="lbl">Net VAT Payable (Docs vs Ledger)</div>
                        <div class="val">@_vm.NetVatPayable_Docs.ToString("0.00")  /  @_vm.NetVatPayable_Ledger.ToString("0.00")</div>
                        <div class="mut small">Diff: <b>@_vm.NetVat_Diff.ToString("0.00")</b></div>
                    </div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-12 col-lg-6">
                    <div class="cardx">
                        <div class="head">
                            <div>Document VAT Mismatches</div>
                            <div class="mut small">Rows: <b>@_vm.DocVatMismatches.Count</b></div>
                        </div>
                        <div class="body">
                            <div class="tbl">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width:70px;">Type</th>
                                            <th style="width:120px;">Date</th>
                                            <th style="width:160px;">Doc No</th>
                                            <th>Party</th>
                                            <th class="text-end" style="width:120px;">Header VAT</th>
                                            <th class="text-end" style="width:120px;">Lines VAT</th>
                                            <th class="text-end" style="width:120px;">Diff</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var d in _vm.DocVatMismatches)
                                        {
                                            <tr>
                                                <td class="fw-bold">@d.DocType</td>
                                                <td>@d.DocDate.ToString("dd-MMM-yyyy")</td>
                                                <td class="fw-semibold">@d.DocNo</td>
                                                <td>@d.PartyName</td>
                                                <td class="text-end">@d.HeaderVat.ToString("0.00")</td>
                                                <td class="text-end">@d.LinesVat.ToString("0.00")</td>
                                                <td class="text-end fw-bold @(Math.Abs(d.Diff) > 0.01m ? "text-danger" : "")">@d.Diff.ToString("0.00")</td>
                                            </tr>
                                        }
                                        @if (!_vm.DocVatMismatches.Any())
                                        {
                                            <tr><td colspan="7" class="text-center text-muted py-4">No document mismatches 🎉</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mut small mt-2">
                                If you see mismatches here, your header totals are not matching line totals (fix calculations during save).
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="cardx">
                        <div class="head">
                            <div>Ledger VAT Postings (VAT Accounts)</div>
                            <div class="mut small">Rows: <b>@_vm.LedgerRows.Count</b></div>
                        </div>
                        <div class="body">
                            <div class="tbl">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width:120px;">Date</th>
                                            <th style="width:80px;">Type</th>
                                            <th style="width:140px;">Voucher</th>
                                            <th class="text-end" style="width:90px;">Dr</th>
                                            <th class="text-end" style="width:90px;">Cr</th>
                                            <th class="text-end" style="width:120px;">Amount</th>
                                            <th style="min-width:170px;">Effect</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var r in _vm.LedgerRows)
                                        {
                                            <tr>
                                                <td>@r.TxnDate.ToString("dd-MMM-yyyy")</td>
                                                <td class="fw-semibold">@r.VoucherType</td>
                                                <td>@r.VoucherNo</td>
                                                <td class="text-end">@r.DebitAccountNo</td>
                                                <td class="text-end">@r.CreditAccountNo</td>
                                                <td class="text-end fw-semibold">@r.Amount.ToString("0.00")</td>
                                                <td>@r.Effect</td>
                                            </tr>
                                        }
                                        @if (!_vm.LedgerRows.Any())
                                        {
                                            <tr><td colspan="7" class="text-center text-muted py-4">No VAT postings found in ledger for these accounts.</td></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mut small mt-2">
                                If this table is empty but docs have VAT, it means you are not posting VAT into ledger accounts.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@code {
    int _companyId;
    bool _loading;
    string? _err;

    DateTime _from = new(DateTime.Today.Year, DateTime.Today.Month, 1);
    DateTime _to = DateTime.Today;

    // ✅ Set your default VAT accounts here (change to your chart of accounts)
    int _outputVatAcc = 2105;
    int _inputVatAcc = 1105;

    VatReconciliationService.VatReconciliationDto? _vm;

    protected override async Task OnInitializedAsync()
    {
        await CurrentCompany.RefreshAsync();
        _companyId = CurrentCompany.CompanyId;
        await Load();
    }

    async Task Load()
    {
        if (_loading) return; // ✅ prevents double click / re-entry

        _err = null;
        _loading = true;

        try
        {
            await CurrentCompany.RefreshAsync();
            _companyId = CurrentCompany.CompanyId;
            if (_companyId <= 0) throw new Exception("Company not resolved.");

            _vm = await Recon.GetAsync(_companyId, _from, _to, _outputVatAcc, _inputVatAcc);
        }
        catch (Exception ex)
        {
            _vm = null;
            _err = ex.InnerException?.Message ?? ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

}
